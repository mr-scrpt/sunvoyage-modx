<div class="input-group dynamic-[[+id]]">
  <span class="dynamic-count dynamic-minus disabled input-group-addon" data-dynamic="-1">-</span>
  <input type="text" name="count" value="" placeholder="0" class="input-sm form-control dynamic-input" />
  <span class="dynamic-count dynamic-plus input-group-addon" data-dynamic="1">+</span>

  <button type="submit" class="dynamic-action" name="ms2_action" value="cart/add" style="display:none"></button>

  <input type="hidden" class="dynamic-key" name="key" value="[[+key_d]]">
</div>